<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.seller.CheckingOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="18"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:orientation="horizontal"
            android:weightSum="8" >

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:text="Checking Order"
                android:gravity="center|start"
                android:paddingStart="10dp"
                android:drawablePadding="10dp"
                android:textStyle="bold"
                android:textSize="22dp"
                android:textColor="#000"
                android:drawableLeft="@drawable/back_left_orange"/>

            <ImageView
                android:id="@+id/imgSupport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/question_mark" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="#E8BDF28D" />

        <!--        checking_order_shop -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvCheckingOrder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16.6"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>