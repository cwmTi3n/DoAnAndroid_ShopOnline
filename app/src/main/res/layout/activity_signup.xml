<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8DEE2"
    tools:context=".activity.SignupActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical"
            android:weightSum="17">


            <TextView
                android:id="@+id/tvsignup"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1.2"
                android:text="SIGN UP"
                android:gravity="center"
                android:textColor="#6C5DD2"
                android:textSize="35dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:textColor="#6C5DD2"
                android:textSize="20dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edtemail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                android:background="@drawable/radius_border_10dp"
                android:drawableLeft="@drawable/user1"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:textSize="20dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:layout_marginTop="15dp"
                android:text="UserName"
                android:textColor="#6C5DD2"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtusername"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                android:background="@drawable/radius_border_10dp"
                android:drawableLeft="@drawable/id_card_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:layout_marginTop="15dp"
                android:text="Phone"
                android:textColor="#6C5DD2"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtphone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                android:background="@drawable/radius_border_10dp"
                android:drawableLeft="@drawable/phone_call_24"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:inputType="number"
                android:paddingStart="10dp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:layout_marginTop="15dp"
                android:text="Password"
                android:textColor="#6C5DD2"
                android:textSize="20dp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                app:passwordToggleEnabled="true"
                app:startIconDrawable="@drawable/padlock"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tfpass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/radius_border_10dp"
                    android:fontFamily="sans-serif"
                    android:inputType="textPassword"
                    android:textSize="20dp"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.75"
                android:layout_marginTop="15dp"
                android:text="Confirm Password"
                android:textColor="#6C5DD2"
                android:textSize="20dp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                app:passwordToggleEnabled="true"
                app:startIconDrawable="@drawable/confirm"
                app:startIconTint="#000">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tfconfirmpass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/radius_border_10dp"
                    android:fontFamily="sans-serif"
                    android:inputType="textPassword"
                    android:textSize="20dp"></com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btnsignup"
                android:layout_width="170dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_weight="1.5"
                android:background="@drawable/ripple_button_radius"
                android:text="SIGN UP"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/tvlogin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Do you have an account? Login?"
                android:textAlignment="center"
                android:textColor="#6C5DD2"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>