<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.seller.AddCategoryActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvadd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#F15050"
            android:text="ADD CATEGORY"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="#fff"
            android:fontFamily="sans-serif"
            android:drawableLeft="@drawable/left_chevron"
            android:paddingStart="10dp" />

        <ImageView
            android:id="@+id/imgcate"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/imgproduct" />

        <EditText
            android:id="@+id/edtcatename"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:paddingStart="10dp"
            android:background="@drawable/rectangle_border_black"
            android:hint="CategoryName"
            android:ems="10"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_marginRight="20dp"
                android:text="Status"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spinnerstatus"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:fontFamily="sans-serif"
                android:background="@drawable/rectangle_border_black"
                android:spinnerMode="dialog">

            </Spinner>


        </LinearLayout>

        <Button
            android:id="@+id/btnaddcate"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Add Category"
            android:fontFamily="sans-serif-black"
            android:drawableLeft="@drawable/plus"
            android:backgroundTint="#F15050"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>