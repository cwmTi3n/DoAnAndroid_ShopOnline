<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4EEEE"
    tools:context=".activity.seller.FinanceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="18"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvBack"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="22dp"
            android:textStyle="bold"
            android:gravity="center|start"
            android:drawableLeft="@drawable/back_left_orange"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:text="Sales analysis" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#F1E6E6" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Favorite shop"
            android:textStyle="bold"
            android:gravity="center|start"
            android:paddingStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rectangle"
            android:textSize="18dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2.5"
            app:srcCompat="@drawable/favorite" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/textView38"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="18dp"
                android:background="@drawable/rectangle"
                android:layout_marginRight="5dp"
                android:paddingStart="10dp"
                android:gravity="center|start"
                android:textStyle="bold"
                android:text="Total Order" />

            <TextView
                android:id="@+id/tvTotalOrder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectangle"
                android:textSize="18dp"
                android:textStyle="bold"
                android:gravity="center|end"
                android:paddingRight="10dp"
                android:text="0" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.05"
            android:background="#F1E6E6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="18dp"
                android:background="@drawable/rectangle"
                android:paddingStart="10dp"
                android:layout_marginRight="5dp"
                android:gravity="center|start"
                android:textStyle="bold"
                android:text="Delivering Order" />

            <TextView
                android:id="@+id/tvDeliveringOrder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="18dp"
                android:background="@drawable/rectangle"
                android:textStyle="bold"
                android:gravity="center|end"
                android:paddingRight="10dp"
                android:text="0" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.05"
            android:background="#F1E6E6" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="18dp"
                android:background="@drawable/rectangle"
                android:paddingStart="10dp"
                android:layout_marginRight="5dp"
                android:gravity="center|start"
                android:textStyle="bold"
                android:text="Delivered Order" />

            <TextView
                android:id="@+id/tvDeliveredOrder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="18dp"
                android:background="@drawable/rectangle"
                android:textStyle="bold"
                android:gravity="center|end"
                android:paddingRight="10dp"
                android:text="0" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.05"
            android:background="#F1E6E6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="18dp"
                android:background="@drawable/rectangle"
                android:paddingStart="10dp"
                android:layout_marginRight="5dp"
                android:gravity="center|start"
                android:textStyle="bold"
                android:text="Cancel Order" />

            <TextView
                android:id="@+id/tvCancelOrder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="18dp"
                android:background="@drawable/rectangle"
                android:textStyle="bold"
                android:gravity="center|end"
                android:paddingRight="10dp"
                android:text="0" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.05"
            android:background="#F1E6E6" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="18dp"
                android:background="@drawable/rectangle"
                android:paddingStart="10dp"
                android:layout_marginRight="5dp"
                android:gravity="center|start"
                android:textStyle="bold"
                android:text="Revenue" />

            <TextView
                android:id="@+id/tvRevenue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="18dp"
                android:background="@drawable/rectangle"
                android:textStyle="bold"
                android:gravity="center|end"
                android:paddingRight="10dp"
                android:text="1000000000" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.05"
            android:background="#F1E6E6" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:orientation="horizontal"
            android:weightSum="6">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rectangle_line"
                android:orientation="vertical"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tvRevenueBig"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textSize="35dp"
                    android:text="0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.05"
                    android:background="#F1E6E6" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.95"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:paddingStart="35dp"
                    android:drawablePadding="-50dp"
                    android:drawableLeft="@drawable/dollars_small"
                    android:text="Revenue"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rectangle_line"
                android:orientation="vertical"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tvTotalOrderBig"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:textSize="35dp"
                    android:text="0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.05"
                    android:background="#F1E6E6" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.95"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:paddingStart="35dp"
                    android:drawablePadding="-40dp"
                    android:drawableLeft="@drawable/ordericon"
                    android:text="Total Order"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>