<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.seller.MainSellerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="8">

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:text="My Store"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="#373b54"
                android:gravity="center"
                android:paddingStart="10dp"
                android:textAlignment="viewStart" />

            <ImageView
                android:id="@+id/imgSetting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/setting_orange" />

            <ImageView
                android:id="@+id/imgChatting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/chatting_orange" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#F1E6E6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:weightSum="8">

            <ImageView
                android:id="@+id/imgStore"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/user_circle" />

            <TextView
                android:id="@+id/tvShopName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginRight="20dp"
                android:text="Shop Name"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="20dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvViewShop"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2.2"
                android:text="View Shop"
                android:gravity="center"
                android:textSize="17dp"
                android:textColor="#DD1717"
                android:background="@drawable/rectangle_border_red"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.1"
            android:background="#F1E6E6" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/banner" />

        <TextView
            android:id="@+id/tvMyOrder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginTop="10dp"
            android:text="Order                                     Order History"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/order"
            android:drawableRight="@drawable/back_left"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="9"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearCancelOrder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#F5F2F2"
                android:layout_weight="3"
                android:weightSum="4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCancelOrder"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="35dp"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:text="Cancel Order"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearRefundOrder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="#F5F2F2"
                android:layout_weight="3"
                android:weightSum="4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRefundOrder"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="35dp"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/TextView16"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:text="Refund Order"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearFeedback"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="#F5F2F2"
                android:layout_weight="3"
                android:weightSum="4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="35dp"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:text="Feedback"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="#000"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.1"
            android:background="#F1E6E6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:weightSum="9"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearMyProduct"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:weightSum="4"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgMyProduct"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    app:srcCompat="@drawable/myproduct" />

                <TextView
                    android:id="@+id/tvMyProduct"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="My Product"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearFinance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:weightSum="4"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgFinance"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    app:srcCompat="@drawable/finance" />

                <TextView
                    android:id="@+id/tvFinance"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="My Finance"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearSupport"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:weightSum="4"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgSupport"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    app:srcCompat="@drawable/question_mark" />

                <TextView
                    android:id="@+id/tvSupport"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:text="Support"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.1"
            android:background="#F1E6E6" />

        <TextView
            android:id="@+id/tvAddProduct"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:text="Add Product"
            android:gravity="center"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:textSize="18dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/add"
            android:drawableRight="@drawable/back_left"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.1"
            android:background="#F1E6E6" />

        <TextView
            android:id="@+id/tvSetUpStore"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:text="Set Up My Store"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:textSize="18dp"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/smallstore"
            android:drawableRight="@drawable/back_left"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.1"
            android:background="#F1E6E6" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>