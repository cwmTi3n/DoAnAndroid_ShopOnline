<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.seller.AddProductActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="14"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHeaderAdd"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:background="#F15050"
            android:text="ADD PRODUCT"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif"
            android:drawableLeft="@drawable/left_chevron"
            android:paddingStart="10dp" />

        <ImageView
            android:id="@+id/imgproduct"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="6"
            app:srcCompat="@drawable/imgproduct" />

        <EditText
            android:id="@+id/edtname"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="10dp"
            android:fontFamily="sans-serif"
            android:background="@drawable/rectangle_border_black"
            android:hint="Name"
            android:ems="10"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/spinnercateName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:spinnerMode="dialog"
            android:fontFamily="sans-serif"
            android:background="@drawable/rectangle_border_black">

        </Spinner>

        <EditText
            android:id="@+id/edtdescription"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle_border_black"
            android:ems="10"
            android:hint="Description"
            android:fontFamily="sans-serif"
            android:inputType="textMultiLine"
            android:paddingStart="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/edtprice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:paddingStart="10dp"
                android:background="@drawable/rectangle_border_black"
                android:hint="Price"
                android:fontFamily="sans-serif"
                android:ems="10"
                android:inputType="number" />

            <EditText
                android:id="@+id/edtstock"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:paddingStart="10dp"
                android:background="@drawable/rectangle_border_black"
                android:hint="Stock"
                android:fontFamily="sans-serif"
                android:ems="10"
                android:inputType="number" />


        </LinearLayout>

        <Button
            android:id="@+id/btnadd"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:layout_gravity="center"
            android:text="Add Product"
            android:textSize="18dp"
            android:fontFamily="sans-serif-black"
            android:drawableLeft="@drawable/plus"
            android:backgroundTint="#F15050"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>