<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MyOrderActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="18">


        <TextView
            android:id="@+id/tvMyOrder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="My Order"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:drawableLeft="@drawable/arrow_left"
            android:drawablePadding="10dp"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:weightSum="9">

            <TextView
                android:id="@+id/tvDelivered"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Delivered"
                android:textColor="#ee4d2d"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvCancelled"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Cancelled"
                android:textColor="#8C8A85"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRefunded"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="Refunded"
                android:textColor="#8C8A85"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:weightSum="9">

            <TextView
                android:id="@+id/lineDelivered"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#ee4d2d" />

            <TextView
                android:id="@+id/lineCancelled"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#F1E6E6" />

            <TextView
                android:id="@+id/lineRefunded"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#F1E6E6" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="#F1E6E6" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>