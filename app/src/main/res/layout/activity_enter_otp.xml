<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EnterOTPActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="13"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvBack"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Enter OTP code"
            android:textSize="23dp"
            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:gravity="center|start"
            android:drawableLeft="@drawable/back_left_orange"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.05"
            android:background="#F1E6E6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="OTP sent to "
                android:gravity="center"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Email"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#000"
            android:text="20110081@student.hcmute.edu.vn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="8" >

            <EditText
                android:id="@+id/edtNumber1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:textSize="27dp"
                android:ems="10"
                android:inputType="number" />
            <EditText
                android:id="@+id/edtNumber2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="27dp"
                android:enabled="false"
                android:layout_marginRight="5dp"
                android:ems="10"
                android:inputType="number" />
            <EditText
                android:id="@+id/edtNumber3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:textSize="27dp"
                android:enabled="false"
                android:ems="10"
                android:inputType="number" />
            <EditText
                android:id="@+id/edtNumber4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:textSize="27dp"
                android:enabled="false"
                android:ems="10"
                android:inputType="number" />
            <EditText
                android:id="@+id/edtNumber5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:textSize="27dp"
                android:enabled="false"
                android:ems="10"
                android:inputType="number" />
            <EditText
                android:id="@+id/edtNumber6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:textSize="27dp"
                android:enabled="false"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:backgroundTint="#ee4d2d"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Next" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>