<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.seller.UpdateProductActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="25"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.95"
                android:text="UPDATE PRODUCT"
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="#000"
                android:paddingStart="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05"
                android:background="#F1E6E6" />

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="250dp"
                android:layout_height="0dp"
                android:layout_weight="8.5"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/imgproduct" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:weightSum="8">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Name"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-black"/>

                <EditText
                    android:id="@+id/edtname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:weightSum="8">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginTop="5dp"
                    android:text="Price"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black" />


                <EditText
                    android:id="@+id/edtprice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:ems="10"
                    android:textSize="20dp"
                    android:inputType="number"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="VNĐ"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:weightSum="8"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginTop="10dp"
                    android:text="Category"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-black" />

                <Spinner
                    android:id="@+id/sncateName"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="6"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_border_black">
                </Spinner>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="16">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:fontFamily="sans-serif-black"
                android:text="Status"
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/rdoStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="horizontal"
                android:weightSum="4">

                <RadioButton
                    android:id="@+id/radioButtonOn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="On"
                    android:textColor="#373b54" />

                <RadioButton
                    android:id="@+id/radioButtonOff"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Off"
                    android:textColor="#373b54" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:text="Stock"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black" />

            <EditText
                android:id="@+id/edtstock"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="3.5"
                android:textSize="20dp"
                android:ems="10"
                android:inputType="number"
                android:paddingStart="10dp"
                android:background="@drawable/rectangle_border_black"/>

        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:weightSum="8">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Detail"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"/>

                <EditText
                    android:id="@+id/edtdescription"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:background="@drawable/rectangle_border_black"
                    android:inputType="textMultiLine"
                    android:paddingStart="10dp"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.2"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:weightSum="8">

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:layout_gravity="center"
                    android:text="Delete"
                    android:layout_marginRight="5dp"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-black"
                    android:backgroundTint="#E41D1D" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:layout_gravity="center"
                    android:text="save"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-black"
                    android:backgroundTint="#57C40B" />
            </LinearLayout>
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>