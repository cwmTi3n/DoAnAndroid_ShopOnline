<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.seller.UpdateProductActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvupdate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#F15050"
                android:text="UPDATE PRODUCT"
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textColor="#fff"
                android:drawableLeft="@drawable/left_chevron"
                android:paddingStart="10dp" />

            <ImageView
                android:id="@+id/imgproduct"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/imgproduct" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:weightSum="9">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:text="Name"
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-black"/>

                <EditText
                    android:id="@+id/edtname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:weightSum="9">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_marginTop="5dp"
                    android:text="Price"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black" />

                <EditText
                    android:id="@+id/edtprice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:ems="10"
                    android:textSize="20dp"
                    android:inputType="number"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:text="Category"
                    android:textSize="18dp"
                    android:layout_marginRight="29dp"
                    android:fontFamily="sans-serif-black" />

                <Spinner
                    android:id="@+id/spinnercateName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="6"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_border_black">
                </Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Description"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black"/>

                <EditText
                    android:id="@+id/edtdescription"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rectangle_border_black"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:paddingStart="10dp"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="53dp"
                    android:text="Stock"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-black" />

                <EditText
                    android:id="@+id/edtstock"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20dp"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingStart="10dp"
                    android:background="@drawable/rectangle_border_black"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="47dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Status"
                    android:textSize="18dp" />

                <Spinner
                    android:id="@+id/spinnerstatus"
                    android:layout_width="60dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rectangle_border_black">
                </Spinner>
            </LinearLayout>

            <Button
                android:id="@+id/btnupdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="Update Product"
                android:textSize="20dp"
                android:fontFamily="sans-serif-black"
                android:drawableLeft="@drawable/updated"
                android:backgroundTint="#F15050"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>