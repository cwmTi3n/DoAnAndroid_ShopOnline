<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProductDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/imgback"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/left_arrow" />

                <EditText
                    android:id="@+id/edtfind"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="8.75"
                    android:background="@drawable/radius_border_10dp"
                    android:drawableLeft="@drawable/search"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Find Your Product"
                    android:inputType="textPersonName"
                    android:paddingStart="20dp"
                    android:textSize="15dp"
                    android:textStyle="italic" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgproduct"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/sample_product" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FF8F00"
                android:weightSum="10">

                <TextView
                    android:id="@+id/tvprice"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="8"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="5dp"
                    android:text="49000Ä‘"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/tvbestprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/lightning"
                    android:text="Best Price"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvnameproduct"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="Bluetooth Headphone "
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#2F2D2D"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:weightSum="10"
                android:background="@drawable/rectangle_border_red">


                <ImageView
                    android:id="@+id/imgavatar"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_weight="2"
                    tools:src="@drawable/bottom_btn2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5.5"
                    android:paddingStart="10dp"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tvshopName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.3"
                        android:text="Shop Name"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#000"/>

                    <TextView
                        android:id="@+id/tvamountProduct"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:text="46 Product"
                        android:textSize="17dp"
                        android:textStyle="italic"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvviewShop"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="2.2"
                    android:layout_marginTop="15dp"
                    android:paddingTop="2dp"
                    android:background="@drawable/radius_border_10dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="VIEW"
                    android:textColor="#000">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/tvdescription"
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:layout_marginTop="5dp"
                    android:text="description of product"
                    android:textColor="#211F1F"
                    android:textSize="18dp"/>

            </LinearLayout>


                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#f6f6f6">

                    <com.google.android.material.bottomappbar.BottomAppBar
                        android:id="@+id/app_bar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:layout_marginStart="-16dp"
                        android:backgroundTint="#f6f6f6"
                        app:fabCradleMargin="8dp"
                        app:fabCradleRoundedCornerRadius="50dp"
                        app:fabCradleVerticalOffset="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:orientation="horizontal"
                            android:weightSum="8">

                            <LinearLayout
                                android:id="@+id/linearchat"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="#26aa99"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imgChat"
                                    android:layout_width="match_parent"
                                    android:layout_height="32dp"
                                    android:layout_marginTop="3dp"
                                    app:srcCompat="@drawable/chat" />

                                <TextView
                                    android:id="@+id/tvChat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Chat"
                                    android:textAlignment="center"
                                    android:textColor="#ffffff"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.2"
                                android:layout_gravity="center"
                                android:background="#26aa99"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/TextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="I"
                                    android:gravity="center"
                                    android:textAlignment="center"
                                    android:textColor="#000"
                                    android:textSize="45sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearAddToCart"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.4"
                                android:orientation="vertical"
                                android:visibility="visible"
                                android:background="#26aa99"
                                android:weightSum="2">

                                <ImageView
                                    android:id="@+id/imgCart"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1.7"
                                    android:layout_marginTop="3dp"
                                    app:srcCompat="@drawable/whitecart" />

                                <TextView
                                    android:id="@+id/tvAddToCart"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Add To Cart"
                                    android:textAlignment="center"
                                    android:textColor="#ffffff"
                                    android:textSize="18sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearBuyNow"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3.4"
                                android:background="#ff7337"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/btnBuyNow"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Buy Now"
                                    android:gravity="center"
                                    android:textAlignment="center"
                                    android:textColor="#ffffff"
                                    android:textSize="20sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.bottomappbar.BottomAppBar>
                </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>